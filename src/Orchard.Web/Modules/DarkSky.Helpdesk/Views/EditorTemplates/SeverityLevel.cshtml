@using DarkSky.Helpdesk.Models
@{
    var currentValue = ViewData.TemplateInfo.FormattedModelValue as SeverityLevel?;
    var values = (SeverityLevel[])Enum.GetValues(typeof (SeverityLevel));
    var options = values.Select(x => new SelectListItem {Text = x.ToString(), Value = x.ToString(), Selected = x == currentValue}).ToList();
}
@Html.DropDownList("", options)