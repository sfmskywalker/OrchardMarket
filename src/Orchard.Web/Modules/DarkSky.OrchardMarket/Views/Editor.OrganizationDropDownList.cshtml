@using System.Linq
@using DarkSky.OrchardMarket.Models
@{
    var organizations = (IEnumerable<OrganizationPart>)Model.Organizations;
    var currentValue = ViewData.TemplateInfo.FormattedModelValue as int?;
    var options = organizations.Select(x => new SelectListItem { Text = x.Name, Value = x.Id.ToString(), Selected = x.Id == currentValue });
}
@Html.DropDownList("", options, "Select Organization")