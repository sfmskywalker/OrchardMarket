@using Contrib.Taxonomies.Models
@using DarkSky.OrchardMarket.Models
@{
    var tags = (IList<TermPart>)Model.Tags;
    var extensionType = (ExtensionType)(Model.ExtensionType != null ? Model.ExtensionType : ExtensionType.Module);
    var count = tags.Count;
}
@for (var i = 0; i < count; i++) {
    var tag = tags[i];
    @Html.ActionLink(tag.Name, "Index", "Browse", new { tag = tag.Name, extensionType }, null)if (i < count-1){<text>,</text>}
}